{
  "name": "financ-back",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "homepage": "https://github.com/freelancinggroup22/financ-back#readme",
  "bugs": {
    "url": "https://github.com/freelancinggroup22/financ-back/issues"
  },
  "keywords": [
    "docker",
    "multi-stage-build",
    "jest",
    "node",
    "express",
    "typescript",
    "husky",
    "firebase",
    "logger",
    "winston",
    "ddd",
    "clean-code",
    "clean-architecture"
  ],
  "scripts": {
    "build": "rimraf dist/ && tsc -p tsconfig-build.json --skipLibCheck",
    "start": "node dist/infra/http/server.js",
    "start:dev": "tsnd --respawn --transpile-only --inspect=0.0.0.0:9229 --ignore-watch node_modules --watch --clear --exit-child --rs -r tsconfig-paths/register src/infra/http/server.ts",
    "lint": "eslint --ext ts --fix src/**/*.ts",
    "test": "jest --no-cache --silent=false --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest -i --watchAll",
    "prepare": "husky install",
    "tsnode": "ts-node -r tsconfig-paths/register",
    "release": "standard-version"
  },
  "dependencies": {
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase": "^9.10.0",
    "firebase-admin": "^11.0.1",
    "helmet": "^6.0.0",
    "joi": "^17.6.0",
    "module-alias": "^2.2.2",
    "rate-limiter-flexible": "^2.3.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/firebase": "^3.2.1",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.8",
    "@types/joi": "^17.2.3",
    "@types/node": "^18.7.13",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
